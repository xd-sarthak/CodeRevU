# Database
DATABASE_URL="postgresql://user:password@localhost:5432/coderevu?sslmode=require"

# GitHub OAuth & Integration
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"
# CRITICAL: Generate a strong random secret for webhook validation
# You can generate one with: openssl rand -hex 32
GITHUB_WEBHOOK_SECRET="your_webhook_secret_min_32_chars"

# Google Gemini AI
GOOGLE_GENERATIVE_AI_API_KEY="your_gemini_api_key"

# Pinecone Vector Database
PINECONE_API_KEY="your_pinecone_api_key"
PINECONE_INDEX_NAME="coderevu"

# Application URLs (Server-side only - NOT exposed to client)
APP_BASE_URL="http://localhost:3000"

# Environment
NODE_ENV="development"

# Better Auth
BETTER_AUTH_SECRET="your_better_auth_secret_min_32_chars"
BETTER_AUTH_URL="http://localhost:3000"

# Polar (Payment/Subscription) - Optional
POLAR_ACCESS_TOKEN="your_polar_access_token"
POLAR_WEBHOOK_SECRET="your_polar_webhook_secret"
POLAR_SUCCESS_URL="/dashboard/subscriptions?success=true"

# Inngest (Background Jobs) - Optional in development
INNGEST_EVENT_KEY="your_inngest_event_key"
INNGEST_SIGNING_KEY="your_inngest_signing_key"

# Client-side variables (Safe to expose - prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_BETTER_AUTH_URL="http://localhost:3000"

# ============================================
# SECURITY NOTES:
# ============================================
# 1. NEVER commit the actual .env file to git
# 2. Generate strong random secrets for all *_SECRET variables
# 3. Use different secrets for development and production
# 4. Rotate secrets periodically in production
# 5. Store production secrets in your hosting platform's secret manager
#    (e.g., Vercel Environment Variables, AWS Secrets Manager)
# 6. Only use NEXT_PUBLIC_ prefix for variables that MUST be exposed to the browser
# 7. Ensure DATABASE_URL includes sslmode=require in production
